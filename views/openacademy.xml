<openerp>
    <data>
    
    <record model="ir.actions.act_window" id="cursos_list_action">
        <field name="name">Cursos</field>
        <field name="res_model">cursos.course</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p class="oe_view_nocontent_create">Crea el primer curso</p>
        </field>
    </record> 
	<menuitem id="main_openacademy_menu" name="Academy"/>
    <menuitem id="openacademy_menu" name="Open Academy" parent="main_openacademy_menu"/>
    <menuitem id="courses_menu" name="Cursos" parent="openacademy_menu" action="cursos_list_action"/>
    
	<record model="ir.ui.view" id="cursos_form_view">
		<field name="name">cursos.form</field>
		<field name="model">cursos.course</field>
		<field name="arch" type="xml">
			<form string="Course form">
				<sheet>
					<group>
						<field name="name"></field>
                        <field name="Horas"></field>
                        <field name="profesor_id"></field>
					</group>
					<notebook>
                        <page string="Sesiones">
                            <field name="session_ids">
                                <tree string="Registrar sesion"> 
                                    <field name="name"/>
                                    <field name="duracion"></field>
                                    <field name="seats"/>
                                    <field name="fecha_inicio"/>
                                    <field name="instructor_id"/>
                                </tree>
                            </field>
                        </page>                       
                        <page string="Información Sobre el curso">
							<field name="description"/>
						</page>
                        <page string="Temas a tratar">
                            <field name="temas"/>
                        </page>
                    </notebook>
				</sheet>
			</form>
		</field> 
 	</record>

    <record model="ir.ui.view" id="course_tree_view">
        <field name="name">cursos.tree</field>
        <field name="model">cursos.course</field>
        <field name="arch" type="xml">
            <tree string="Curso Tree">
                <field name="name"/>
                <field name="profesor_id"/>
            </tree>
        </field>
    </record>
    
    <!-- Creación del menu Sesiones -->

    <record model="ir.actions.act_window" id="session_list_action">
        <field name="name">Sesiones</field>
        <field name="res_model">openacademy.session</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record> 
    
    <menuitem id="session_menu" name="Sesiones" parent="openacademy_menu" action="session_list_action"/> 

    <!-- session form view --> 

    <record model="ir.ui.view" id="session_form_view">
        <field name="name">Session.form</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <form string="Session form">
                <sheet>
                    <group string="General">
                        <field name="course_id"/>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="instructor_id"/>
                    </group>
                    <group string="Horario">
                        <field name="fecha_inicio"/>
                        <field name="duracion"/>
                        <field name="seats"/>
                        <field name="taken_seats" widget="progressbar"/>
                    </group>
                    <label for="alumnos_ids"/>
                    <field name="alumnos_ids"/>
                </sheet>
            </form>
        </field> 
    </record>

    <!-- session tree/list view -->

    <record model="ir.ui.view" id="session_tree_view">
        <field name="name">session.tree</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <tree string="session Tree">
                <field name="name"/>
                <field name="taken_seats" widget="progressbar"/>
            </tree>
        </field>
    </record>
    </data>
</openerp>